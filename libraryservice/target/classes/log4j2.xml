<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%-5p] [%d] [%t] %x %c - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="akka" level="WARN"/>
        <Logger name="com.datastax" level="WARN"/>
        <Logger name="io.netty" level="WARN"/>
        <Logger name="org.apache.cassandra" level="WARN"/>
        <Logger name="org.apache.hadoop" level="WARN"/>
        <Logger name="org.apache.spark" level="WARN"/>
        <Logger name="org.cassandraunit" level="WARN"/>
        <Logger name="org.spark-project" level="WARN"/>
        <Logger name="org.apache.spark.api.r" level="INFO"/>
        <Logger name="org.reflections" level="WARN"/>
        <Logger name="parquet.hadoop" level="WARN"/>
        <Logger name="slick" level="INFO"/>
        <Logger name="ai.deepsense" level="DEBUG"/>
        <Logger name="org.spark_project.jetty" level="WARN"/>
        <Logger name="DataNucleus" level="WARN"/>
        <Logger name="com.jolbox" level="WARN"/>
        
        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
